[server]
skip-networking=0

[mysqld]
user = mysql
pid-file = /run/mysqld/mysqld.pid
socket = /run/mysqld/mysqld.sock
port = 3306
basedir = /usr
datadir = /var/lib/mysql
tmpdir = /tmp
bind-address = 0.0.0.0

# Fichiers de log
log-error = /var/log/mysql/error.log

# Caractères et Collation
character-set-server = utf8mb4
collation-server = utf8mb4_general_ci

# Connexions
max_connections = 100
connect_timeout = 5

# Désactiver la résolution DNS pour le débogage
skip-name-resolve = 0

# Permettre les connexions depuis n'importe où
skip-networking = 0
